<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TablaComentarios">
    <!--ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"-->
    <ListView
        android:id="@+id/comentarioLVComentarios"
        android:layout_width="match_parent"
        android:layout_height="262dp" />

    <TextView
        android:id="@+id/comentarioTVComentar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ComTitulo" />

    <EditText
        android:id="@+id/comentarioETCuerpo"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <Button
        android:id="@+id/comentarioBTNComentar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ComPublicar" />
    <!--/ScrollView-->
</LinearLayout>